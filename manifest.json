{
  "manifest_version": 3,
  "name": "Amazon Cookie Fetcher",
  "version": "1.0",
  "description": "Fetch Amazon page with cookies",
  "permissions": ["cookies", "activeTab", "storage", "scripting"],
  "host_permissions": ["https://www.amazon.com/*"],
  "background": {
    "service_worker": "scripts/background.js"
  },
  "action": {
    "default_popup": "frontend/popup.html",
    "default_icon": {
      "16": "icons/icon.png",
      "48": "icons/icon.png",
      "128": "icons/icon.png"
    }
  }
}
